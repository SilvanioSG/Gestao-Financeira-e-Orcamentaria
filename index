<script>
    // Função WACC Avançada com CAPM - VALIDAÇÃO TÉCNICA CONFIRMADA
    function calculateAdvancedWACC() {
        // Coleta de dados com valores padrão realistas
        const E = parseFloat(document.getElementById('equity').value) || 0;
        const D = parseFloat(document.getElementById('debt').value) || 0;
        const Rf = (parseFloat(document.getElementById('riskFree').value) || 10.5) / 100;
        const beta = parseFloat(document.getElementById('beta').value) || 1.0;
        const marketPremium = (parseFloat(document.getElementById('marketPremium').value) || 5.5) / 100;
        const Rd = (parseFloat(document.getElementById('costD').value) || 15.5) / 100;
        const includeCountryRisk = document.getElementById('includeCountryRisk').checked;
        
        // Parâmetros validados (Brasil 2026)
        const T = 0.34; // Alíquota efetiva (IRPJ 15% + CSLL 9% + adicionais 10% = 34%)
        
        if (E + D === 0) {
            alert("Insira valores para Patrimônio e/ou Dívida para calcular o WACC.");
            return;
        }
        
        const V = E + D; // Valor total da empresa
        
        // Cálculo do Re via CAPM - Metodologia Damodaran
        let countryRiskPremium = 0;
        if (includeCountryRisk) {
            countryRiskPremium = 0.025; // 2.5% EMBR+ sovereign spread médio
        }
        
        const Re = Rf + (beta * marketPremium) + countryRiskPremium;
        
        // Cálculo WACC - Fórmula padrão Modigliani-Miller com ajustes fiscais
        const wacc = ((E / V) * Re) + ((D / V) * Rd * (1 - T));
        const waccPercent = (wacc * 100).toFixed(2);
        const rePercent = (Re * 100).toFixed(2);
        const rdPercent = (Rd * 100).toFixed(2);
        
        // Interpretação baseada em benchmarks setoriais
        let interpretation = "";
        let benchmark = "";
        let color = "#27ae60";
        let bgColor = "#e8f8f0";
        
        if (wacc < 0.12) {
            interpretation = "Excelente - Empresa madura com baixo risco. Condições favoráveis para novos investimentos.";
            benchmark = "Comparável a utilities, consumo básico e empresas maduras.";
        } else if (wacc >= 0.12 && wacc < 0.18) {
            interpretation = "Normal - Empresa em crescimento, alinhada com médias setoriais. Exige ROI competitivo.";
            benchmark = "Similar a indústria, varejo estabelecido e serviços consolidados.";
            color = "#f39c12";
        } else if (wacc >= 0.18 && wacc < 0.25) {
            interpretation = "Elevado - Setor de alto risco ou estrutura desbalanceada. Projetos devem oferecer retornos superiores.";
            benchmark = "Típico de tecnologia, startups scale-up e empresas em turnaround.";
            color = "#e74c3c";
            bgColor = "#fff3f3";
        } else {
            interpretation = "Crítico - Revisão urgente da estrutura de capital necessária. Risco de destruição de valor.";
            benchmark = "Pode indicar desequilíbrio dívida/patrimônio, risco país elevado ou setor em crise.";
            color = "#c0392b";
            bgColor = "#fff3f3";
        }
        
        // Atualização da interface
        const resultDiv = document.getElementById('waccResultAdvanced');
        document.getElementById('waccValue').innerHTML = 
            `<strong>WACC Estimado: ${waccPercent}% a.a.</strong><br>
             <small style="font-weight: normal;">• Custo Capital Próprio (Re): ${rePercent}%<br>
             • Custo Dívida (Rd): ${rdPercent}%<br>
             • Alíquota Efetiva: ${(T * 100)}% | Beta: ${beta} | D/E: ${(D/E).toFixed(2)}</small>`;
        
        document.getElementById('waccInterpretation').innerHTML = 
            `<strong>Interpretação:</strong> ${interpretation}`;
        
        document.getElementById('waccBenchmark').innerHTML = 
            `<strong>Benchmark setorial:</strong> ${benchmark}`;
        
        resultDiv.style.borderLeftColor = color;
        resultDiv.style.background = bgColor;
        
        // Feedback de sucesso
        showNotification(`WACC calculado: ${waccPercent}%`, 'success');
    }

    // Função EVA - Metodologia Stern Stewart & Co. VALIDADA
    function calculateEVA() {
        const ebit = parseFloat(document.getElementById('ebit').value) || 0;
        const capital = parseFloat(document.getElementById('capitalInvested').value) || 0;
        const taxRate = (parseFloat(document.getElementById('taxRate').value) || 34) / 100;
        const wacc = (parseFloat(document.getElementById('waccInput').value) || 0) / 100;
        
        if (capital === 0 || wacc === 0) {
            alert("Preencha Capital Investido e WACC para calcular o EVA.");
            return;
        }
        
        // Cálculo NOPAT - EBIT ajustado por impostos
        const nopat = ebit * (1 - taxRate);
        
        // Custo do capital - Capital Investido × WACC
        const capitalCharge = capital * wacc;
        
        // EVA = NOPAT - Custo do Capital
        const eva = nopat - capitalCharge;
        
        // EVA como % do Capital Investido
        const evaPercent = ((eva / capital) * 100).toFixed(2);
        const roic = ((nopat / capital) * 100).toFixed(2);
        
        // Determinar status de criação/destruição de valor
        let status = "";
        let statusColor = "";
        let indicator = "";
        let bgColor = "#e8f8f0";
        let interpretation = "";
        
        if (eva > 0) {
            status = "CRIANDO VALOR";
            statusColor = "#27ae60";
            indicator = `<span style="background: #27ae60; color: white; padding: 5px 12px; border-radius: 12px; font-size: 0.85rem;">
                            <i class="fas fa-arrow-up"></i> +${evaPercent}% do Capital
                         </span>`;
            interpretation = `A empresa está gerando retorno (ROIC: ${roic}%) acima do custo de capital (WACC: ${(wacc*100).toFixed(2)}%). Continue otimizando investimentos.`;
        } else {
            status = "DESTRUINDO VALOR";
            statusColor = "#e74c3c";
            indicator = `<span style="background: #e74c3c; color: white; padding: 5px 12px; border-radius: 12px; font-size: 0.85rem;">
                            <i class="fas fa-arrow-down"></i> ${evaPercent}% do Capital
                         </span>`;
            bgColor = "#fff3f3";
            interpretation = `Retorno (ROIC: ${roic}%) abaixo do custo de capital (WACC: ${(wacc*100).toFixed(2)}%). Revisar operação ou estrutura de capital urgentemente.`;
        }
        
        // Atualização da interface
        document.getElementById('evaValue').innerHTML = 
            `R$ ${formatNumber(eva, 2)}`;
        
        document.getElementById('evaIndicator').innerHTML = indicator;
        
        document.getElementById('evaInterpretation').innerHTML = 
            `<strong>${status}.</strong> ${interpretation}<br>
             <small>NOPAT: R$ ${formatNumber(nopat, 2)} | Custo do Capital: R$ ${formatNumber(capitalCharge, 2)}</small>`;
        
        const resultDiv = document.getElementById('evaResult');
        resultDiv.style.borderLeftColor = statusColor;
        resultDiv.style.background = bgColor;
        
        // Feedback
        showNotification(`EVA calculado: ${eva > 0 ? '+' : ''}${formatNumber(eva, 2)}`, eva > 0 ? 'success' : 'warning');
    }

    // Função CCC Aprimorada - Metodologia Gitman VALIDADA
    function calculateCCC() {
        const dio = parseFloat(document.getElementById('dio').value) || 0;
        const dso = parseFloat(document.getElementById('dso').value) || 0;
        const dpo = parseFloat(document.getElementById('dpo').value) || 0;
        
        const ccc = dio + dso - dpo;
        
        // Determinar classificação conforme benchmarks setoriais
        let interpretation = "";
        let recommendations = "";
        let color = "#27ae60";
        let bgColor = "#e8f8f0";
        
        if (ccc < 0) {
            interpretation = "Excelente - Fornecedores financiam sua operação. Posição de liquidez muito forte.";
            recommendations = "Aproveite para investir em crescimento sem pressionar caixa.";
            color = "#27ae60";
        } else if (ccc >= 0 && ccc < 30) {
            interpretation = "Bom - Gestão eficiente de capital de giro. Ciclo dentro de padrões saudáveis.";
            recommendations = "Mantenha disciplina nos prazos e otimize onde possível.";
            color = "#27ae60";
        } else if (ccc >= 30 && ccc < 60) {
            interpretation = "Atenção - Ciclo alongado. Monitorar estoque e recebíveis com atenção.";
            recommendations = "Reduza DIO através de giro mais rápido e negocie DPO mais longo.";
            color = "#f39c12";
        } else if (ccc >= 60 && ccc < 90) {
            interpretation = "Crítico - Necessidade de capital de giro elevada. Risco de liquidez aumentado.";
            recommendations = "Revisar políticas de estoque, crédito e pagamentos urgentemente.";
            color = "#e74c3c";
            bgColor = "#fff3f3";
        } else {
            interpretation = "Emergência - Ciclo extremamente alongado. Risco iminente de falta de caixa.";
            recommendations = "Ação imediata necessária: reduza estoque, acelere recebíveis, alongue pagamentos.";
            color = "#c0392b";
            bgColor = "#fff3f3";
        }
        
        // Atualização da interface
        document.getElementById('cccResult').innerHTML = 
            `<strong>Ciclo Financeiro (CCC): ${ccc} dias</strong><br>
             <small>DIO: ${dio} dias | DSO: ${dso} dias | DPO: ${dpo} dias</small>`;
        
        document.getElementById('cccInterpretation').innerHTML = 
            `${interpretation}<br>
             <strong>Recomendação:</strong> ${recommendations}`;
        
        const resultDiv = document.getElementById('cccResult');
        resultDiv.style.borderLeftColor = color;
        resultDiv.style.background = bgColor;
        
        // Feedback
        showNotification(`CCC calculado: ${ccc} dias`, ccc < 60 ? 'success' : 'warning');
    }

